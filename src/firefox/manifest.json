{
  "manifest_version": 3,
  "name": "Dumbdown",
  "version": "1.0.0",
  "description": "TL;DR as a shortcut",

  "browser_specific_settings": {
    "gecko": {
      "id": "dumbdown@example.com",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Summarize with LLM"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Command+Alt+S"
      },
      "description": "Summarize with default LLM"
    },
    "summarize-perplexity": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Command+Alt+P"
      },
      "description": "Summarize with Perplexity"
    },
    "summarize-chatgpt": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Command+Alt+G"
      },
      "description": "Summarize with ChatGPT"
    },
    "summarize-claude": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Command+Alt+C"
      },
      "description": "Summarize with Claude"
    }
  }
}
